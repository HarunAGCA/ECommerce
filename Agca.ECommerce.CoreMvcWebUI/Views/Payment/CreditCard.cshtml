@model Agca.ECommerce.CoreMvcWebUI.Models.PaymentViewModel
@{
    ViewData["Title"] = "CreditCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Payment Credit Card Form</h1>

<form asp-action="CreditCard" asp-controller="Payment" method="post" class="was-validated">
    

    <div class="form-group">
        <label asp-for="@Model.Payment.CreditCardNo" style="color:blue">Credit Card No(Only MasterCard)</label>
        <input class="form-control" type="text" asp-for="@Model.Payment.CreditCardNo" placeholder="XXXXXXXXXXXXXXXX" pattern="^(5[1-5][0-9]{14}|2(22[1-9][0-9]{12}|2[3-9][0-9]{13}|[3-6][0-9]{14}|7[0-1][0-9]{13}|720[0-9]{12}))$"/>
        <span asp-validation-for="@Model.Payment.CreditCardNo" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Payment.CreditCardOwnerName" style="color:blue">Card Owner Name</label>
        <input class="form-control" asp-for="@Model.Payment.CreditCardOwnerName" placeholder="Card Owner Name" />
        <span asp-validation-for="@Model.Payment.CreditCardOwnerName" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Payment.CreditCardExpiryDate" style="color:blue">Expiry Date</label>
        <input class="form-control" asp-for="@Model.Payment.CreditCardExpiryDate" placeholder="XX/XX" pattern="^(0[1-9]|1[0-2])\/?([0-9]{4}|[0-9]{2})$" />
        <span asp-validation-for="@Model.Payment.CreditCardExpiryDate" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Payment.CreditCardCVC" style="color:blue">CVC/CVV</label>
        <input class="form-control" asp-for="@Model.Payment.CreditCardCVC" placeholder="XXX or XXXX" pattern="^[0-9]{3,4}$"/>
        <span asp-validation-for="@Model.Payment.CreditCardCVC" style="color:red"></span>
    </div>




    <input class="btn btn-md btn-success" type="submit" value="Complete Payment" />
</form>



