@model Agca.ECommerce.CoreMvcWebUI.Models.UpdateProductViewModel
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UpdateProduct</h1>


<form asp-controller="Admin" asp-action="UpdateProduct" method="post" class="was-validated">

    <div class="form-group">
        <label asp-for="@Model.Product.Name">Product Name</label>
        <input asp-for="@Model.Product.Name" class="form-control" placeholder="Product Name" />
        <span asp-validation-for="@Model.Product.Name" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Product.UnitPrice">Unit Price</label>
        <input asp-for="@Model.Product.UnitPrice" class="form-control" placeholder="Unit Price" />
        <span asp-validation-for="@Model.Product.UnitPrice" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Product.UnitsInStock">Unit in stock</label>
        <input asp-for="@Model.Product.UnitsInStock" class="form-control" placeholder="Unit in stock" />
        <span asp-validation-for="@Model.Product.UnitsInStock" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Product.CategoryId">Category</label>
        <select asp-for="@Model.Product.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
        <span asp-validation-for="@Model.Product.CategoryId" style="color:red"></span>
    </div>
    
    <input type="hidden" asp-for="@Model.Product.Id" />
    <input type="submit" value="Update" class="btn btn-success" />



</form>