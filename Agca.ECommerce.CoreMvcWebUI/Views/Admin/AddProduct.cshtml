@model Agca.ECommerce.CoreMvcWebUI.Models.AddProductViewModel
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddProduct</h1>

<form enctype="multipart/form-data" asp-controller="Admin" asp-action="AddProduct" method="post" class="was-validated">

    <div class="form-group">
        <label asp-for="@Model.Product.Name">Product Name</label>
        <input asp-for="@Model.Product.Name" class="form-control" placeholder="Product Name" />
        <span asp-validation-for="@Model.Product.Name" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Product.UnitPrice">Unit Price</label>
        <input asp-for="@Model.Product.UnitPrice" class="form-control" placeholder="Unit Price" />
        <span asp-validation-for="@Model.Product.UnitPrice" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Product.UnitsInStock">Unit in stock</label>
        <input asp-for="@Model.Product.UnitsInStock" class="form-control" placeholder="Unit in stock" />
        <span asp-validation-for="@Model.Product.UnitsInStock" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Product.CategoryId">Category</label>
        <select asp-for="@Model.Product.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
        <span asp-validation-for="@Model.Product.CategoryId" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Product.Photos">Photos</label>
        <input asp-for=@Model.Photos type="file" class="form-control" multiple />
        <span asp-validation-for=@Model.Photos style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Product.Description">Description</label>
        <textarea asp-for="@Model.Product.Description"
                  placeholder="Description"
                  rows="5" class="col-md-12"
                  data-val-maxlength-max="1000"
                  data-val-maxlength="The field Description must be a string or array type with a maximum length of '1000'."
                  data-val="true">
        </textarea>
        <span asp-validation-for="@Model.Product.Description" style="color:red"></span>
    </div>





    <input type="submit" value="Add" class="btn btn-success" />


</form>

