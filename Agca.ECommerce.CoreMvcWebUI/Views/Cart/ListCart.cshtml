@model Agca.ECommerce.CoreMvcWebUI.Models.CartListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-striped table-responsive table-hover">
    <thead class="thead-light">
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th>Category Id</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart.CartLines)
        {
            <tr>
                <td>@item.Product.Id</td>
                <td>@item.Product.Name</td>
                <td>@item.Product.UnitPrice</td>
                <td>@item.Product.UnitsInStock</td>
                <td>@item.Product.CategoryId</td>
                <td>@item.Quantity</td>
                <td><a class="btn btn-sm btn-danger" 
                       asp-controller="Cart" 
                       asp-action="Remove" 
                       asp-route-productId="@item.Product.Id">
                    <i class="fa fa-remove"></i> Remove from the cart</a></td>
            </tr>
        }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><h4>Total:</h4></td>
        <td style="text-align: center">
            <h4>
                <strong>@Model.Cart.Total <i class="fa fa-turkish-lira"></i></strong>
            </h4>
        </td>
    </tr>
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
            <a href="/cart/complete" class="btn btn-info btn-sm">Complete the shopping</a>
        </td>
        <td>
            <a href="/product/list" class="btn btn-success btn-sm"><i class="fa fa-shopping-cart"></i> Continue the shopping</a>
        </td>
    </tr>
    </tbody>
</table>

