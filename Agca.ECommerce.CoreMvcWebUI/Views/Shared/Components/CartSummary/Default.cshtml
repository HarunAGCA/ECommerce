@model Agca.ECommerce.CoreMvcWebUI.Models.CartSummaryViewModel

<li>
    <a href="/Cart/ListCart" class="btn btn-outline-info">
        <i class="fa fa-shopping-cart" style="color:orange; font-size:20pt">

            @if (Model.Cart.CartLines.Count > 0)
            {
                <span class="badge badge-light" style="position:absolute; border-radius:5px; background-color:darkorchid; color:white; font-size:12pt">
                    @Model.Cart.CartLines.Count()
                </span>

            }

        </i>
    </a>
</li>
<li class="nav-item dropdown m-1">
    <a class="nav-link dropdown-toggle" style="font-size:14pt" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Cart Summary
    </a>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

        @foreach (var item in Model.Cart.CartLines)
        {
            <a class="dropdown-item" href="#">@item.Product.Name <span class="badge badge-primary">@item.Quantity</span></a>
        }

        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="/cart/listcart"><i class="fa fa-shopping-cart" style="font-size:larger; color:orange"></i> Total : @Model.Cart.Total <i class="fa fa-turkish-lira" style="font-size:larger; color:green"></i></a>
    </div>
</li>